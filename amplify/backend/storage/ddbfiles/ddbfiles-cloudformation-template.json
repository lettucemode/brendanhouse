{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "DynamoDB resource stack creation using Amplify CLI",
    "Parameters": {
        "partitionKeyName": {
            "Type": "String"
        },
        "partitionKeyType": {
            "Type": "String"
        },
        "env": {
            "Type": "String"
        },
        
        "sortKeyName": {
            "Type": "String"
        },
        "sortKeyType": {
            "Type": "String"
        },
        
        "tableName": {
            "Type": "String"
        },
        "authRoleName": {
            "Type": "String"
        },
        "unauthRoleName": {
            "Type": "String"
        },
        "rolePermissions": {
            "Type": "String"
        },
        "policyName": {
            "Type": "String"
        }
    },
    "Conditions": {
        "ShouldNotCreateEnvResources": {
            "Fn::Equals": [
                {
                    "Ref": "env"
                },
                "NONE"
            ]
        }
    },
    "Resources": {
        "DynamoDBTable": {
            "Type": "AWS::DynamoDB::Table",
            "Properties": {
                "AttributeDefinitions": [
                  
                  {
                      "AttributeName": "name",
                      "AttributeType": "S"
                  }  , 
                  
                  {
                      "AttributeName": "s3key",
                      "AttributeType": "S"
                  } 
                  
                ],
                "KeySchema": [
                  
                  {
                    "AttributeName": "name",
                    "KeyType": "HASH"
                  }  , 
                  
                  {
                    "AttributeName": "s3key",
                    "KeyType": "RANGE"
                  } 
                  
                ],
                "ProvisionedThroughput": {
                    "ReadCapacityUnits": "5",
                    "WriteCapacityUnits": "5"
                },
                "StreamSpecification": {
                    "StreamViewType": "NEW_IMAGE"
                },
                "TableName": {
                    "Fn::If": [
                        "ShouldNotCreateEnvResources",
                        {
                           "Ref": "tableName"
                        }, 
                        {

                            "Fn::Join": [
                                "",
                                [
                                  {
                                    "Ref": "tableName"
                                  },
                                  "-",
                                  {
                                    "Ref": "env"
                                  }
                                ]
                            ]
                        }
                    ]
                }
                
            }
        },
        "DynamoDBTableAccessPolicy": {
            "DependsOn": [
                "DynamoDBTable"
            ],
            "Type": "AWS::IAM::Policy",
            "Properties": {
                "PolicyName": {
                    "Ref": "policyName"
                },
                "Roles": [
                    {
                        "Ref": "authRoleName"
                    },
                    {
                        "Ref": "unauthRoleName"
                    }
                ],
                "PolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Action": {
                                "Fn::Split": [ ",", {
                                    "Ref": "rolePermissions"
                                }]
                            },
                            "Resource": [
                                {
                                    "Fn::GetAtt": [
                                        "DynamoDBTable",
                                        "Arn"
                                    ]
                                }
                            ]
                        }
                    ]
                }
            }
        }
    },
    "Outputs": {
        "Name": {
            "Value": {
                "Ref": "DynamoDBTable"
            }
        },
        "Arn": {
            "Value": {
                "Fn::GetAtt": [
                    "DynamoDBTable",
                    "Arn"
                ]
            }
        },
        "StreamArn": {
            "Value": {
                "Fn::GetAtt": [
                    "DynamoDBTable",
                    "StreamArn"
                ]
            }
        },
        "PartitionKeyName": {
            "Value": {
                "Ref": "partitionKeyName"
            }
        },
        "PartitionKeyType": {
            "Value": {
                "Ref": "partitionKeyType"
            }
        },
        
        "SortKeyName": {
            "Value": {
                "Ref": "sortKeyName"
            }
        },
        "SortKeyType": {
            "Value": {
                "Ref": "sortKeyType"
            }
        },
        
        "Region": {
            "Value": {
                "Ref": "AWS::Region"
            }
        }
    }
}